<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>11111111-2222-3333-4444-555555555555</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Diva Inc.</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Diva Add-in"/>
  <Description DefaultValue="Diva Outlook Add-in"/>

  <IconUrl DefaultValue="https://maisondelarose.org/dist/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://maisondelarose.org/dist/assets/icon-128.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://maisondelarose.org/dist/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- VersionOverrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="DivaGroup">
                <Label resid="Group.Label"/>

                <Control xsi:type="Button" id="OpenTaskpane">
                  <Label resid="Button.Label"/>
                  <Tooltip resid="Button.Tooltip"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Supertip"/>
                  </Supertip>

                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://maisondelarose.org/dist/assets/icon-16.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://maisondelarose.org/dist/assets/icon-32.png"/>
        <bt:Image id="Icon.80" DefaultValue="https://maisondelarose.org/dist/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://maisondelarose.org/dist/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="Diva"/>
        <bt:String id="Button.Label" DefaultValue="Open Diva"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="Button.Tooltip" DefaultValue="Open Diva add-in"/>
        <bt:String id="Button.Supertip" DefaultValue="Open the Diva task pane inside Outlook"/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
